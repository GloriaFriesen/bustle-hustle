{{#if addNewStory}}
<h1>New Story</h1>
<div>
  <form>
    <div class="form-group">
      <label for="headline">Headline</label>
      {{input value=headline id="headline"}}
    </div>

    <div class="form-group">
      <label for="author">Who wrote that shit?!</label>
      {{input value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="image">Img link</label>
      {{input value=image id="image"}}
    </div>

    <div class="form-group">
      <label for="content">Contents</label>
      {{input value=content id="content"}}
    </div>

    <div class="form-group">
      <label for="category">Category</label>
      {{input value=category id="category"}}
    </div>

    <button {{action 'saveStory'}}>Save</button>
  </form>
</div>
{{else}}
  <button {{action 'storyFormShow'}}>New Story</button>
{{/if}}
