{{#if updateStoryForm}}
  <h4>Update {{story.owner}}'s {{story.type}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="headline">Headline</label>
        {{input value=headline id="headline" placeholder=story.headline}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placeholder=story.author}}
      </div>

      <div class="form-group">
        <label for="content">Body Content</label>
        {{input value=content id="content" placeholder=story.content}}
      </div>

      <div class="form-group">
        <label for="category">Category</label>
        {{input value=category id="category" placeholder=story.category}}
      </div>

      <div class="form-group">
        <label for="image">Image Link</label>
        {{input value=image id="image" placeholder=story.image}}
      </div>

      <button {{action 'update' story}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateStoryForm' story}}>Update</button>
{{/if}}
